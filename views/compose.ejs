<%- include("partials/header"); -%>
    <h1>Compose</h1>

    <form action="/index" method="post">
        <div class="form-group">
            <label for="heading">Enter Your Heading</label>
            <input type="text" class="form-control" placeholder="Enter Your Heading" name="heading" required
                id="heading">
        </div>
        <div class="form-group">
            <label for="message">Enter Your Learning</label>
            <textarea class="form-control" id="message" rows="5" name="message" placeholder="Enter Your Learning"
                required></textarea>
        </div>
        <button name="publish" type="submit" class="btn btn-lg">Publish</button>
    </form>
    <%- include("partials/footer"); -%>